<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <style>
        thead th {
            background-color: #343a40; /* Color de fondo oscuro (gris oscuro) */
            color: white; /* Color de texto blanco */
        }

        h2 {
            color: white;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <h2>Crud de Cargos</h2>
            <a href="cruds" class="navbar-brand">Regresar</a>
        </div>
    </nav>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Cargo</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cargos.forEach(function(cargo) { %>
                            <tr>
                                <td><%= cargo.id %></td>
                                <td><%= cargo.cargo %></td>
                                <td><%= cargo.activo ? 'SÃ­' : 'No' %></td>
                                <td>
                                    <a href="/editcargos/<%=cargo.id %>" class="btn btn-warning btn-sm">Editar</a>
                                    <a href="/deletecargos/<%=cargo.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Agregar Cargo</h5>
                    </div>
                    <div class="card-body">
                        <form action="/crud_cargos" method="post">
                            <div class="form-group">
                                <label for="cargo">Cargo</label>
                                <input type="text" name="cargo" id="cargo" class="form-control" placeholder="Cargo" required>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <input type="checkbox" name="activo" id="activo" class="form-check-input" value="1">
                                    <label for="activo" class="form-check-label">Activo</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Insertar</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
