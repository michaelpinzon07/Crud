<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <style>
        thead th {
            background-color: #343a40; /* Color de fondo oscuro (gris oscuro) */
            color: white; /* Color de texto blanco */
        }

        h2 {
            color: white;
        }
    </style>

<script>
    function confirmDelete(event) {
        event.preventDefault(); // Evita que el enlace se siga
        var result = confirm("¿Estás seguro de que quieres eliminar este registro?");
        if (result) {
            window.location.href = event.target.href; // Redirige al enlace si se confirma
        }
    }
</script>
</head>

<body>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <h2>Crud de Localizaciones</h2>
            <a href="cruds" class="navbar-brand">Regresar</a>
        </div>
    </nav>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Localizacion</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% localizaciones.forEach(function(localizacion) { %>
                            <tr>
                                <td><%= localizacion.id %></td>
                                <td><%= localizacion.localizacion %></td>
                                <td><%= localizacion.activo ? 'Sí' : 'No' %></td>
                                <td>
                                    <a href="/edit/<%= localizacion.id %>" class="btn btn-warning btn-sm">Editar</a>
                                    <a href="/delete/<%= localizacion.id %>" class="btn btn-danger btn-sm" onclick="confirmDelete(event)">Eliminar</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Agregar Localizacion</h5>
                    </div>
                    <div class="card-body">
                        <form action="/crud_localizaciones" method="post">
                            <div class="form-group">
                                <label for="localizacion">Localizacion</label>
                                <input type="text" name="localizacion" id="localizacion" class="form-control" placeholder="Localizacion" required>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <input type="checkbox" name="activo" id="activo" class="form-check-input" value="1">
                                    <label for="activo" class="form-check-label">Activo</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Insertar</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>

